<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_open_simple_data_binding_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/open_simple_data_binding_activity" />

    <Button
        android:id="@+id/btn_open_fragment_data_binding_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/open_fragment_data_binding_activity" />

    <Button
        android:id="@+id/btn_open_binding_adapter_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/open_binding_adapter_activity" />

    <Button
        android:id="@+id/btn_list_data_binding_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/open_list_data_binding_activity" />

</LinearLayout>