<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_activity_view_binding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_binding_for_activity" />

    <Button
        android:id="@+id/btn_fragment_view_binding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_binding_for_fragment" />

    <Button
        android:id="@+id/btn_list_view_binding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_binding_for_list" />

</LinearLayout>